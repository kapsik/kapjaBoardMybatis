    BNO         NUMBER PRIMARY KEY,
    BTITLE      VARCHAR2(100),
    BCONTENT    CLOB,
    BWRITER     VARCHAR2(100),
    BDATE       DATE DEFAULT SYSDATE,
    BHIT        NUMBER
); 

